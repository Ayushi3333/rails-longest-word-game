 <h1>New game</h1>

<div class="letters">
  <% @letters.each do |letter| %>
    <p class="letter-ind"><%= letter.capitalize %></p>
  <% end %>
</div>
<h4>What is the longest word you can find?</h4>
<form action="/score" method="post">
  <input type="text" class="word" name="word">
  <input type="submit" value="Play" class="button">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :random_letters, @letters %>
</form>